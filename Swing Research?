import java.awt.Color;
import java.awt.Graphics;
import javax.swing.JComponent;
import javax.swing.JFrame;

class drawGantt extends JComponent {

    public void paintGantt(Graphics g) {
        g.drawRoundRect(10, 10, 200, 200, 15, 15);
        g.drawLine(14, 14, 208, 208);
        g.drawLine(208, 14, 14, 208);
    }
    
}

class openWindow extends JComponent {

    public static void openWindow() {
        JFrame window = new JFrame();
        window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        window.setBounds(30, 30, 300, 300);
        window.getContentPane().add(new drawGantt());
        window.setVisible(true);
    }
}

public class SwingMessing {

    public static void main(String[] args) {
        
        openWindow canvas = new openWindow();
        canvas.openWindow();

    }
}
